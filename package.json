{
  "name": "chronidion",
  "version": "1.0.0",
  "author": "Ziphil",
  "description": "Simple clock widget",
  "main": "dist/index.js",
  "homepage": "https://github.com/Ziphil/Chronidion",
  "scripts": {
    "develop": "cross-env NODE_ENV=development webpack --watch --mode development --config webpack-develop.ts",
    "build": "webpack --mode production --config webpack-product.ts",
    "pack:windows": "electron-builder -w",
    "pack:mac": "electron-builder -m",
    "pack:linux": "electron-builder -l",
    "start": "electron dist/index.js",
    "lint": "eslint"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack-*.ts"
  },
  "build": {
    "appId": "com.ziphil.chronidion",
    "productName": "Chronidion",
    "artifactName": "chronidion-setup.${ext}",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "product"
    },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-connect": "^0.6.3",
    "query-string": "^7.1.1",
    "react": "^16.14.0",
    "react-css-modules": "^4.7.11",
    "react-dom": "^16.14.0",
    "reflect-metadata": "^0.1.13",
    "ts-essentials": "^7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@types/react": "^17.0.3",
    "@types/react-css-modules": "^4.6.2",
    "@types/react-dom": "^17.0.3",
    "@types/webpack-merge": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-reload-webpack-plugin": "^2.0.4",
    "eslint": "^7.24.0",
    "eslint-config-ziphil": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.0",
    "html-webpack-plugin": "^5.3.1",
    "node-sass": "^7.0.1",
    "sass-loader": "^12.6.0",
    "source-map-loader": "^2.0.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3"
  }
}
